        // Fonction pour formater le prix en FCFA
        function formatPrice(price) {
            return price.toLocaleString('fr-FR') + ' FCFA';
        }

        // Fonction pour g√©n√©rer le HTML d'un produit
        function createProductHTML(product) {
            return `
                <div class="product-card">
                    <div class="product-image">
                        ${product.image ? `<img src="${product.image}" alt="${product.title}" style="width:100%;height:100%;object-fit:cover;">` : product.title}
                    </div>
                    <div class="product-info">
                        <h3 class="product-title">${product.title}</h3>
                        <div class="product-price">${formatPrice(product.price)}</div>
                        <div class="product-age">${product.age}</div>
                        <div class="product-category">${product.category}</div>
                        <p class="product-description">${product.description}</p>
                        <button class="btn order-btn" data-product="${product.title}">Commander sur WhatsApp</button>
                    </div>
                </div>
            `;
        }

        // Fonction pour afficher les produits dans un conteneur
        function displayProducts(containerId, filterCategory = null) {
            const container = document.getElementById(containerId);
            container.innerHTML = '';
            
            let filteredProducts = products;
            if (filterCategory) {
                filteredProducts = products.filter(product => product.category === filterCategory);
            }
            
            filteredProducts.forEach(product => {
                container.innerHTML += createProductHTML(product);
            });
            
            // Ajouter les √©couteurs d'√©v√©nements pour les boutons de commande
            document.querySelectorAll('.order-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const productName = this.getAttribute('data-product');
                    const whatsappUrl = `https://wa.me/2290152259069?text=${encodeURIComponent(`Bonjour Leaddy's kids! Je suis int√©ress√© par cet article : ${productName}`)}`;
                    window.open(whatsappUrl, '_blank');
                });
            });
        }

        // Fonction pour changer de section
        function showSection(sectionId) {
            // Masquer toutes les sections
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active-section');
            });
            
            // Afficher la section s√©lectionn√©e
            document.getElementById(sectionId).classList.add('active-section');
            
            // Mettre √† jour la navigation
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            
            document.querySelector(`.nav-item[data-section="${sectionId}"]`).classList.add('active');
            
            // Faire d√©filer vers le haut de la section
            document.getElementById(sectionId).scrollIntoView({ behavior: 'smooth' });
        }

        // Initialisation du site
        document.addEventListener('DOMContentLoaded', function() {
            // Afficher les produits
            displayProducts('products-container');
            displayProducts('girls-container', 'Fille');
            displayProducts('boys-container', 'Gar√ßon');
            
            // Navigation
            document.querySelectorAll('.nav-item').forEach(item => {
                item.addEventListener('click', function() {
                    const sectionId = this.getAttribute('data-section');
                    showSection(sectionId);
                });
            });
            
            // Bouton "Voir nos produits"
            document.getElementById('view-products').addEventListener('click', function(e) {
                e.preventDefault();
                showSection('products');
            });
            
            // Boutons "D√©couvrir" dans les cat√©gories
            document.querySelectorAll('.category-card .btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const sectionId = this.getAttribute('data-section');
                    showSection(sectionId);
                });
            });
            
            // Formulaire de contact
            document.getElementById('contact-form').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const name = document.getElementById('name').value;
                const email = document.getElementById('email').value;
                const phone = document.getElementById('phone').value;
                const message = document.getElementById('message').value;
                
                // Envoyer l'email (simul√© ici)
                const mailtoLink = `mailto:lucdeguenon11@gmail.com?subject=Message de ${name}&body=Nom: ${name}%0D%0AEmail: ${email}%0D%0AT√©l√©phone: ${phone}%0D%0AMessage: ${message}`;
                window.location.href = mailtoLink;
                
                // R√©initialiser le formulaire
                this.reset();
                
                // Afficher un message de confirmation
                alert('Votre message a √©t√© envoy√© avec succ√®s !');
            });
            
            // Afficher la section d'accueil par d√©faut
            showSection('home');
        });
    </script>
